@page "/counter"

<div class="ui text container">
    <h1 class="ui inverted header">Counter</h1>

    <p>Current count: @currentCount</p>

    <button class="ui primary button" onclick="@IncrementCount">Click me</button>
</div>
@functions {
    int currentCount = 0;

    void IncrementCount()
    {
        currentCount++;
    }
}